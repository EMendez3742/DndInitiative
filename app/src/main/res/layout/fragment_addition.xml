<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/nameEditText"
        app:layout_constraintEnd_toStartOf="@+id/nameEditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameEditText"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Hp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/currentHpEditText"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/currentHpEditText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Hp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/maxHpEditText"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/maxHpEditText" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/inititativeEditText"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/inititativeEditText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative Bonus"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textRound"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/acEditText"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/acEditText" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/currentHpEditText"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/currentHpEditText"
        app:layout_constraintTop_toBottomOf="@+id/addCharTitle"
        app:layout_constraintVertical_chainStyle="spread" />

    <EditText
        android:id="@+id/currentHpEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:hint="Current"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/maxHpEditText"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/maxHpEditText"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

    <EditText
        android:id="@+id/maxHpEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:hint="Max"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/inititativeEditText"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/inititativeEditText"
        app:layout_constraintTop_toBottomOf="@+id/currentHpEditText" />

    <EditText
        android:id="@+id/inititativeEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:hint="initiative"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/initBonusEditText"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/initBonusEditText"
        app:layout_constraintTop_toBottomOf="@+id/maxHpEditText" />

    <EditText
        android:id="@+id/initBonusEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:hint="Bonus"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/acEditText"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/acEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:hint="Bonus"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toEndOf="@+id/textRound"
        app:layout_constraintTop_toBottomOf="@+id/initBonusEditText" />

    <TextView
        android:id="@+id/addCharTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="34dp"
        android:fontFamily="@font/italianno_regular"
        android:text="Add Character"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>