<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterBlock"
    android:layout_height="200dp"
    android:layout_width="390dp"
    android:layout_marginStart="10dp"
    android:layout_marginVertical="20dp"
    android:background="@color/white_medium"
    app:cardCornerRadius="40dp"
    app:cardElevation="10dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/charImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="38dp"
        app:layout_constraintBottom_toTopOf="@+id/acLayout"
        app:layout_constraintEnd_toStartOf="@+id/nameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/charImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wave_screenshot" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/charImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hpLayout">

        <TextView
            android:id="@+id/row_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/italianno_regular"
            android:gravity="bottom"
            android:text="Name"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/acLayout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/hpLayout"
        app:layout_constraintTop_toBottomOf="@+id/charImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shield"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="184dp" />

        <TextView
            android:id="@+id/acTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="AC"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="184dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hpLayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acLayout"
        app:layout_constraintTop_toBottomOf="@+id/nameLayout">


        <ProgressBar
            android:id="@+id/hpProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="80dp" />
        <TextView
            android:id="@+id/textHp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="HP"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
